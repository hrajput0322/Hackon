<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amazon Re-Box</title>
    <!-- Bootstrap stylesheets -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        * {
            overflow-x: hidden;
            box-sizing: border-box;
            user-select: none;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f3f3f3;
        }

        a {
            text-decoration: none;
        }

        .header {
            background-color: #232f3e;
            color: #ffffff;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px 0;
        }

        .header .top-line {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            padding: 0 20px;
        }

        .header .brand {
            font-size: 36px;
            font-weight: bold;
            text-decoration: none;
            color: #ffffff;
            margin-right: 10px;
        }

        .header .search-bar {
            display: flex;
            flex: 1;
        }

        .search-bar input[type="text"] {
            padding: 8px;
            border: none;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            flex: 1;
        }

        .search-bar button {
            background-color: #f0c14b;
            color: #111;
            border: none;
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
        }

        .search-bar button:hover {
            background-color: #d1a815;
        }

        .header .user-info {
            display: flex;
            align-items: center;
            padding: 10px 20px;
        }

        .header .username {
            margin-right: 10px;
            font-weight: bold;
        }

        .header .icons img {
            margin-right: 10px;
            width: 24px;
            height: 24px;
        }

        .header .bottom-line {
            display: flex;
            width: 100%;
            justify-content: center;
            background-color: #131a22;
        }

        .header .nav-item {
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
        }

        /* Carousel Styles */
        #testimonial-carousel {
            width: 100%;
            max-height: 500px;
            overflow: hidden;
        }

        #testimonial-carousel img {
            width: 100%;
            height: auto;
            max-height: 500px;
        }

        .carousel-control-prev, .carousel-control-next {
            background-color: transparent;
            border: none;
        }

        /* Card Styles */
        .card {
            margin: 20px;
            transition: transform 0.2s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background-color: #FDF0F0;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            height: 250px;
            object-fit: cover;
        }

        .card-body {
            text-align: center;
            text-decoration: none;
            color: black;
        }

        .text-container {
            width: 300px; /* Adjust the width as needed */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .ellipsis {
            margin: 0;
        }


        /* Footer Styles */
        .footer {
            background-color: #232f3e;
            color: #ffffff;
            padding: 20px 0;
            text-align: center;
        }

        .footer a {
            color: black;
        }

        .eco-friendly {
            border: 1px solid black;
            display: flex;
            align-items: center;
            height: 30px;
            justify-content: center;
            background-color: rgb(0, 255, 0);
            border-radius: 5px;
            text-align: center;
            /* font-weight: bold; */
        }

        .normal {
            border: 1px solid black;
            display: flex;
            align-items: center;
            height: 30px;
            justify-content: center;
            background-color: #232f3e;
            border-radius: 5px;
            text-align: center;
            /* font-weight: bold; */
            color: white;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="top-line">
            <a class="brand" href="/index"><img src="logo.png" alt=""> Amazon Re-Box</a>
            <div class="search-bar">
                <input type="text" id="search-input" placeholder="Search...">
                <button id="search-button">Search</button>
            </div>
            <div class="user-info" id="user-info">
                <!-- This span will display the login or username -->
                <span id="user-display">
                    <% if(locals.username!= null){%>
                        <a href="/user_info"><img src="profile_icon_normal_page.png" style="margin-right: 10px;" alt=""></a>
                        <%}%>
                    <% if (!locals.username==null) {%>
                        <a href="/login" style="text-decoration: none; color: black;">
                            <button class="btn btn-warning" style="text-align: center; margin-right: 10px;">
                                Sign In
                            </button>
                        </a>
                        <% } %>
                    
                </span>
                <div class="icons">
                    <% if (locals.username) {%>
                        <a href="/wishlist"><img src="wishlist_icon.png" alt="Wishlist"></a>
                        <a href="/cart"><img src="cart_icon.png" alt="Cart"></a>
                    <%}%>
                </div>
            </div>
        </div>
        <div class="bottom-line">
            <a class="nav-item" href="/electronic">Electronics</a>
            <a class="nav-item" href="/utensils">Kitchen Accessories</a>
            <a class="nav-item" href="/cleaning">Cleaning</a>
            <a class="nav-item" href="/others">Daily Utilities</a>
            <a class="nav-item" href="/stationary">Stationary</a>
        </div>
    </div>
    <div class="colored-section" id="testimonials">
        <div id="testimonial-carousel" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="false">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="eco_banner.png" class="d-block w-100" alt="Slide 1">
                </div>
                <div class="carousel-item">
                    <img src="banner.png" class="d-block w-100" alt="Slide 2">
                </div>
                <div class="carousel-item">
                    <img src="banner3.png" class="d-block w-100" alt="Slide 2">
                </div>
            </div>
        </div>
    </div>
    <div id="search-results" style="text-align: center;"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <a href="/electronic" style="text-decoration: none;">
                    <div class="card">
                        <img src="card1.png" class="card-img-top" alt="Card Image 1">
                        <div class="card-body">
                            <p class="card-text">Electronics</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/utensils" style="text-decoration: none;">
                    <div class="card">
                        <img src="card2.png" class="card-img-top" alt="Card Image 2">
                        <div class="card-body">
                            <p class="card-text">Kitchen Accessories</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/cleaning" style="text-decoration: none;">
                    <div class="card">
                        <img src="card3.png" class="card-img-top" alt="Card Image 3">
                        <div class="card-body">
                            <p class="card-text">Cleaning</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <!-- Footer Section -->
    <div class="footer">
        &copy; 2023 Amazon Re-Box
    </div>
    <!-- Bootstrap scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("search-input");
        const searchButton = document.getElementById("search-button");
        const searchResults = document.getElementById("search-results");

        // Function to handle the search
        function performSearch() {
            const searchTerm = searchInput.value.trim();

            if (searchTerm) {
                // Make an AJAX request to your server to search for products
                $.ajax({
                    type: "POST",
                    url: "/search-products",
                    data: { searchTerm: searchTerm },
                    success: function (response) {
                        // Clear previous search results
                        searchResults.innerHTML = "";

                        if (response && response.products.length > 0) {
                            let row = null;

                            response.products.forEach((product, index) => {
                                if (index % 4 === 0) {
                                    // Start a new row for every 3 cards
                                    row = document.createElement("div");
                                    row.className = "row";
                                    searchResults.appendChild(row);
                                }

                                const productCard = createProductCard(product);
                                const col = document.createElement("div");
                                col.className = "col-md-3";
                                col.appendChild(productCard);

                                row.appendChild(col);
                            });
                        } else {
                            searchResults.innerHTML = "No results found.";
                        }
                    },
                });
            }
        }

        searchButton.addEventListener("click", performSearch);

        // Add an event listener for Enter key press
        searchInput.addEventListener("keyup", function (event) {
            if (event.key === "Enter") {
                performSearch();
            }
        });

        function createProductCard(product) {
    const cardLink = document.createElement("a");
    const productName = product.p_name; // Get the product name
    cardLink.href = `/checkout?p_name=${encodeURIComponent(productName)}`; // Include product name as a query parameter
    cardLink.className = "card-link"; // You can define a CSS class for styling

    const card = document.createElement("div");
    card.className = "card";
    card.style.textAlign = "center";
    const cardImg = document.createElement("img");
    cardImg.src = product.p_image;
    cardImg.className = "card-img-top";
    cardImg.alt = product.p_name;
    cardImg.style.width = "100%";
    cardImg.style.objectFit = "cover";

    const cardBody = document.createElement("div");
    cardBody.className = "card-body";
    const cardText = document.createElement("p");
    cardText.className = "card-text text-container";
    cardText.textContent = product.p_name;

    const cardTag = document.createElement("p");
    cardTag.className = product.p_tag; // Set the class to product.p_tag
    cardTag.textContent = product.p_tag;

    cardBody.appendChild(cardText);
    cardBody.appendChild(cardTag); // Append the p tag with the product tag
    card.appendChild(cardImg);
    card.appendChild(cardBody);

    cardLink.appendChild(card); // Wrap the card in the anchor element

    return cardLink;
}

    });
</script>

</body>
</html>
